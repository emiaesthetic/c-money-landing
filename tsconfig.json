{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist",
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
